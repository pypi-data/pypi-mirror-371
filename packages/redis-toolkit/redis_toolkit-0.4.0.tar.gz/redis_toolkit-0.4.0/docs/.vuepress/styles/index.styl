// Redis Toolkit 自定義樣式

// 品牌顏色
$redisRed = #dc382d
$redisRedLight = #e85d52
$redisRedDark = #b32b21

// 覆蓋默認主題色
$accentColor = $redisRed
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34

// 首頁特殊樣式
.home
  .hero
    img
      max-height 240px
    h1
      font-size 3rem
      color $redisRed
    .description
      font-size 1.4rem
      color #666
      max-width 40rem
      margin 1.8rem auto
    .action-button
      background $redisRed
      border-color $redisRed
      color #fff
      font-size 1.2rem
      padding 0.8rem 2rem
      &:hover
        background $redisRedLight
        border-color $redisRedLight

// 額外特性區塊
.features-extra
  border-top 1px solid $borderColor
  padding 2.5rem 0
  margin 0 auto
  max-width 1200px
  display flex
  flex-wrap wrap
  align-items flex-start
  align-content stretch
  justify-content space-between
  .feature
    flex 1
    flex-basis 30%
    max-width 30%
    padding 0 1.5rem
    margin-bottom 1.5rem
    h3
      font-size 1.25rem
      font-weight 500
      border-bottom none
      padding-bottom 0
      color $redisRed
    p
      color #666
      line-height 1.7

// 為什麼選擇區塊
.why-choose
  display grid
  grid-template-columns repeat(auto-fit, minmax(250px, 1fr))
  gap 2rem
  margin 2rem 0
  .reason
    background #f8f9fa
    padding 1.5rem
    border-radius 8px
    border-left 4px solid $redisRed
    h4
      color $redisRed
      margin-top 0
      margin-bottom 0.5rem
    p
      margin 0
      color #666
      font-size 0.95rem
      line-height 1.6

// CTA 區塊
.getting-started-cta
  text-align center
  padding 3rem 0
  margin-top 3rem
  background linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%)
  border-radius 8px
  h2
    color $redisRed
    font-size 2rem
    margin-bottom 1rem
  p
    font-size 1.2rem
    color #666
    margin-bottom 2rem
  .action-button
    display inline-block
    font-size 1.2rem
    color #fff
    background-color $redisRed
    padding 0.8rem 2rem
    border-radius 4px
    transition background-color .1s ease
    text-decoration none
    border-bottom 2px solid $redisRedDark
    &:hover
      background-color $redisRedLight

// 代碼區塊美化
div[class*="language-"]
  background-color $codeBgColor
  border-radius 6px
  pre
    background-color $codeBgColor
    code
      color #abb2bf
  .token
    &.comment
      color #5c6370
    &.keyword
      color #c678dd
    &.string
      color #98c379
    &.number
      color #d19a66
    &.function
      color #61afef

// 自定義容器
.custom-block
  &.tip
    background-color #f3f5f7
    border-left 4px solid #42b983
  &.warning
    background-color #fff7e6
    border-left 4px solid #e7c000
  &.danger
    background-color #ffe6e6
    border-left 4px solid #cc0000

// 側邊欄優化
.sidebar
  .sidebar-heading
    color $redisRed
    font-weight 600
  a.sidebar-link
    &:hover
      color $redisRed
    &.active
      color $redisRed
      border-left-color $redisRed

// 導航欄優化
.navbar
  .site-name
    color $redisRed
    font-weight 600
  .nav-link
    &:hover
      color $redisRed
    &.router-link-active
      color $redisRed
  
  // 修復下拉選單樣式
  .nav-dropdown
    background-color #fff !important
    border 1px solid $borderColor
    border-radius 4px
    box-shadow 0 2px 8px rgba(0, 0, 0, 0.1)
    .dropdown-item
      color $textColor !important
      background-color transparent !important
      &:hover
        color $redisRed !important
        background-color #f8f9fa !important
      h4
        color $textColor !important
        border-top-color $borderColor !important
    
  // 確保語言選擇器正常顯示
  .nav-links
    a.nav-link, .dropdown-wrapper .dropdown-title
      color $textColor !important
      &:hover
        color $redisRed !important
    .nav-dropdown
      .dropdown-item
        a
          color $textColor !important
          &:hover
            color $redisRed !important

// 響應式設計
@media (max-width: 719px)
  .features-extra .feature
    max-width 100%
    flex-basis 100%
  .home .hero
    h1
      font-size 2rem
    .description
      font-size 1.2rem

// 程式碼複製按鈕樣式
.code-copy
  svg
    fill $redisRed

// 表格樣式
table
  border-collapse collapse
  margin 1rem 0
  display block
  overflow-x auto
  thead
    background-color #f8f9fa
    tr
      border-bottom 2px solid $redisRed
  tbody tr
    border-bottom 1px solid $borderColor
    &:hover
      background-color #f8f9fa
  th, td
    padding 0.6rem 1rem
    text-align left