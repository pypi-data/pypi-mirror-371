<odoo>
    <record id="view_stock_move_line_operation_tree" model="ir.ui.view">
        <field
            name="name"
        >stock.move.line.operations.tree - stock_receipt_lot_info</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
        <field name="arch" type="xml">
            <field name="lot_name" position="after">
                <field name="picking_type_entire_packs" column_invisible="1" />
                <field
                    name="lot_use_date"
                    groups="stock.group_production_lot"
                    optional="hide"
                    readonly="package_level_id != False and picking_type_entire_packs == True"
                    column_invisible="not parent.show_lots_text"
                />
                <field
                    name="lot_removal_date"
                    groups="stock.group_production_lot"
                    optional="hide"
                    readonly="package_level_id != False and picking_type_entire_packs == True"
                    column_invisible="not parent.show_lots_text"
                />
                <field
                    name="lot_alert_date"
                    groups="stock.group_production_lot"
                    optional="hide"
                    readonly="package_level_id != False and picking_type_entire_packs == True"
                    column_invisible="not parent.show_lots_text"
                />
            </field>
        </field>
    </record>
    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field
            name="name"
        >stock.move.line.operations.tree - stock_receipt_lot_info</field>
        <field name="model">stock.move.line</field>
        <field
            name="inherit_id"
            ref="stock.view_stock_move_line_detailed_operation_tree"
        />
        <field name="arch" type="xml">
            <field name="lot_name" position="after">
                <field name="show_lots_text" column_invisible="1" />
                <field
                    name="lot_use_date"
                    optional="hide"
                    groups="stock.group_production_lot"
                    column_invisible="not show_lots_text"
                    invisible="not lots_visible"
                    context="{'default_product_id': product_id}"
                />
                <field
                    name="lot_removal_date"
                    optional="hide"
                    groups="stock.group_production_lot"
                    column_invisible="not show_lots_text"
                    invisible="not lots_visible"
                    context="{'default_product_id': product_id}"
                />
                <field
                    name="lot_alert_date"
                    optional="hide"
                    groups="stock.group_production_lot"
                    column_invisible="not show_lots_text"
                    invisible="not lots_visible"
                    context="{'default_product_id': product_id}"
                />
            </field>
        </field>
    </record>
</odoo>
