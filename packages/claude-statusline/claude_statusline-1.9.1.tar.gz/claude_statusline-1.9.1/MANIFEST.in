# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
include CLAUDE.md

# Include requirements file
include requirements.txt

# Include configuration and data files
include claude_statusline/config.json
include claude_statusline/prices.json

# Include package data
recursive-include claude_statusline *.json
recursive-include claude_statusline *.md

# Include tests and tools
recursive-include tests *.py
recursive-include tools *.py

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude *.dylib

# Exclude version control
global-exclude .git*
global-exclude .svn
global-exclude .hg

# Exclude build artifacts
global-exclude *.egg-info
global-exclude dist
global-exclude build

# Exclude editor files
global-exclude *.swp
global-exclude *~
global-exclude .DS_Store
global-exclude .vscode
global-exclude .idea