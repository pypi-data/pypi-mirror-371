{
  "name": "encoder",
  "display_name": "{{ project_name | title }} Encoder Service API",
  "base_url": "{% raw %}{{ENCODER_BASE_URL}}{% endraw %}",
  "auth": {
    "type": "oauth2",
    "client_id_env": "ENCODER_CLIENT_ID",
    "client_secret_env": "ENCODER_CLIENT_SECRET",
    "token_url": "{% raw %}{{ENCODER_TOKEN_URL}}{% endraw %}",
    "grant_type": "client_credentials"
  },
  "service_params": {
    "codetype": "{% raw %}{{ENCODER_CODETYPE}}{% endraw %}",
    "code": "{% raw %}{{ENCODER_CODE}}{% endraw %}"
  },
  "default_query_params": {
    "data": "desc-lay"
  },
  "endpoints": {
    "fetch_layman_description": {
      "path": "/ws/codetype/{codetype}/{code}/properties",
      "method": "GET",
      "query_params": {
        "data": "desc-lay"
      },
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "retry": {
        "max_attempts": 3,
        "backoff_factor": 2,
        "status_forcelist": [500, 502, 503, 504]
      },
      "timeout": 15
    },
    "fetch_color_codes": {
      "path": "/ws/codetype/{codetype}/{code}/color-codes",
      "method": "GET",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "retry": {
        "max_attempts": 3,
        "backoff_factor": 2,
        "status_forcelist": [500, 502, 503, 504]
      },
      "timeout": 15
    }
  }
}
