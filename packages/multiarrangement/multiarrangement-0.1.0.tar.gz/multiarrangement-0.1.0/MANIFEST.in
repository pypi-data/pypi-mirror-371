# Include data files
include README.md
include LICENSE
include pyproject.toml
include img1.PNG
include Audio.png
include test_audio_icon_new.png
include results/.gitkeep

# Include package data
recursive-include multiarrangement/data *.txt
recursive-include multiarrangement/data *.xlsx
recursive-include multiarrangement/data *.png *.jpg *.jpeg *.gif
recursive-include multiarrangement/data *.mp4 *.avi *.mov *.mkv *.wmv

# Include demo videos if present
recursive-include demovids *.mp4 *.avi *.mov *.mkv *.wmv

# Include demo video folders (exclude 58videos to keep package size reasonable)
recursive-include 15videos *.avi *.mp4 *.mov *.mkv *.wmv
recursive-include 24videos *.avi *.mp4 *.mov *.mkv *.wmv
recursive-include 15audios *.mp3 *.wav *.ogg *.flac *.aac *.m4a

# Include example data
recursive-include ExampleData *.xlsx *.csv

# Include standalone scripts for backward compatibility
include *.py

# Exclude cache and build files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .git*
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll
recursive-include ljcr_cache *.txt
prune output
