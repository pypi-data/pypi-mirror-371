include README.md
include LICENSE
include pyproject.toml
include setup.py

# Include JavaScript files
recursive-include dom_parser/src/js *.js
recursive-include dom_parser/dist *.js

# Include package.json files
include dom_parser/package.json
include dom_parser/package-lock.json

# Include configuration files
include dom_parser/rollup.config.js

# Include test files
recursive-include dom_parser/tests *.py
recursive-include mcp/tests *.py

# Include documentation
recursive-include dom_parser *.md
recursive-include mcp *.md
recursive-include simple_agent *.md

# Include environment files (but not .env with secrets)
include simple_agent/.env.example

# Include Python package files
recursive-include dom_parser/src *.py
recursive-include mcp *.py
recursive-include simple_agent *.py

# Exclude development files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
global-exclude .git*
global-exclude .pytest_cache
global-exclude venv*
global-exclude node_modules
global-exclude .env
