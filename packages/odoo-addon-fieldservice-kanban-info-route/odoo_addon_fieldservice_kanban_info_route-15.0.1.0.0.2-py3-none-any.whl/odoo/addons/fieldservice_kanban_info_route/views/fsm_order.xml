  <record id="inherit_fsm_order_kanban_view" model="ir.ui.view">
    <field name="name">fsm.order.kanban.inherit</field>
    <field name="model">fsm.order</field>
    <field
            name="inherit_id"
            ref="fieldservice_kanban_info.inherit_fsm_order_kanban_view"
        />
    <field name="arch" type="xml">
      <xpath expr="//div[field[@name='country_name']]" position="after">
        <div attrs="{'invisible': [('fsm_route_id', '=', False)]}">
          <i class="fa fa-road text-warning " title="FSM Route" />
          <field name="fsm_route_id" />
        </div>
      </xpath>
    </field>
  </record>

</odoo>
