# Include only the source package and README / license
include README.md
include pyproject.toml
include src/prismui_icon_gen/*.py

# Recursively include Python files in the package
recursive-include src/prismui_icon_gen *.py

# Exclude cache, virtual env, build/dist folders, and temporary files
exclude **/__pycache__/*
exclude **/*.pyc
exclude **/*.pyo
exclude .venv/*
exclude dist/*
exclude *.egg-info/*

# Exclude test scripts and icons content
exclude test.py
recursive-exclude icons *