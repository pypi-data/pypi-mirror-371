# R-Code CLI Package Manifest
# ===========================
# 
# This file specifies which files to include in the distribution package.
# It ensures all necessary files are bundled when building the package.

# Include package metadata files
include README.MD
include LICENSE
include PRIVACY.md
include SECURITY.md
include TERMS.md
include TRADEMARK.md
include CODE_OF_CONDUCT.md
include CONTRIBUTING.md
include DEVELOPMENT_ROADMAP.md
include requirements.txt
include pyproject.toml
include setup.py

# Include main CLI entry point
include cli.py

# Include all source code
recursive-include src *.py
recursive-include src *.json
recursive-include src *.yaml
recursive-include src *.yml
recursive-include src *.md
recursive-include src *.txt

# Include documentation
recursive-include docs *.md
recursive-include docs *.txt
recursive-include docs *.rst

# Include examples
recursive-include examples *.py
recursive-include examples *.md
recursive-include examples *.txt

# Include static assets if any
recursive-include static *

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .venv
global-exclude venv
global-exclude build
global-exclude dist
global-exclude *.egg-info

# Exclude test files from distribution
exclude tests
recursive-exclude tests *

# Exclude development files
exclude .pre-commit-config.yaml
exclude .gitignore
exclude .flake8
exclude pytest.ini
exclude mypy.ini
exclude tox.ini
