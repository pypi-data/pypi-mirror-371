include README.md
include LICENSE
include requirements.txt
include requirements-dev.txt
include pyproject.toml
include setup.py

# Include package data (excluding large model files)
recursive-include chinese_herbal_sentiment/core *
recursive-include chinese_herbal_sentiment/utils *

# Exclude large model files for PyPI publication
global-exclude chinese_herbal_sentiment/models/bert_sentiment_model/*.safetensors
global-exclude chinese_herbal_sentiment/models/bert_sentiment_model/*.bin
global-exclude chinese_herbal_sentiment/models/bert_sentiment_model/*.pt
global-exclude chinese_herbal_sentiment/models/bert_sentiment_model/*.pth

# Include only model configuration files
include chinese_herbal_sentiment/models/bert_sentiment_model/config.json
include chinese_herbal_sentiment/models/bert_sentiment_model/tokenizer_config.json
include chinese_herbal_sentiment/models/bert_sentiment_model/special_tokens_map.json
include chinese_herbal_sentiment/models/bert_sentiment_model/vocab.txt

# Include documentation
recursive-include docs *.md
recursive-include docs *.txt
recursive-include docs *.rst

# Include examples
recursive-include examples *.py
recursive-include examples *.md
recursive-include examples/sample_data *

# Include tests
recursive-include tests *.py
recursive-include tests *.md

# Include configuration files
include .gitignore
include .flake8
include tox.ini

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .DS_Store
global-exclude .git*
global-exclude .svn*
global-exclude .hg*
global-exclude .bzr*
global-exclude *.egg-info
global-exclude .eggs
global-exclude build
global-exclude dist
global-exclude .tox
global-exclude .venv
global-exclude venv
global-exclude .env
global-exclude .mypy_cache
global-exclude .pytest_cache
