#https://towardsdatascience.com/how-to-create-and-use-custom-matplotlib-style-sheet-9393f498063
font.serif       : 'Computer Modern Roman'
font.size        : 20
text.color       : 'white'

# Axes
axes.titlesize   : 16
axes.labelsize   : 24
axes.labelcolor  : cadbde
axes.edgecolor   : cadbde

# Figure
figure.dpi       : 80
savefig.dpi      : 400
figure.facecolor : none   # Transparent background
figure.frameon   : False  # No frame around the figure

# Ticks
xtick.color      : cadbde
ytick.color      : cadbde
xtick.labelsize  : 16
ytick.labelsize  : 16

# Title
figure.titlesize : 30

# Backgrounds
axes.facecolor   : 404040

