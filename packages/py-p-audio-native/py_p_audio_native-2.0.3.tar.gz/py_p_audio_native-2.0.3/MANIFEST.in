# Include source files
recursive-include src/cpp *.cpp *.h
recursive-include include *.h

# Include ASIO SDK
recursive-include asiosdk *.cpp *.h *.hpp

# Include CMake files
include CMakeLists.txt

# Include documentation
include README.md
include docs/*.md

# Include tests
recursive-include tests *.py

# Exclude build artifacts
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.so
global-exclude *.pyd
global-exclude build
global-exclude dist