{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            // Gets launched when clicking "Debug Test" in the Testing view
            "name": "Debug Unit Test",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${file}",
            // Defines that the configuration should be used when debugging tests in VS Code
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "env": {
                // Disable coverage since it won't work with debugging/breakpoints
                "PYTEST_ADDOPTS": "--no-cov",
                // Needed for the debugger to play well with gevent
                "GEVENT_SUPPORT": "True"
            }
        },
        {
            // Gets launched when clicking "Debug Test" in the Testing view
            "name": "Debug mkdocs",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "/workspaces/grizzly/script/grizzly-mkdocs.py",
            // Defines that the configuration should be used when debugging tests in VS Code
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "env": {
                // Disable coverage since it won't work with debugging/breakpoints
                "PYTEST_ADDOPTS": "--no-cov",
                // Needed for the debugger to play well with gevent
                "GEVENT_SUPPORT": "True",
                "PYTHONPATH": "/workspaces/grizzly"
            }
        }
    ]
}
