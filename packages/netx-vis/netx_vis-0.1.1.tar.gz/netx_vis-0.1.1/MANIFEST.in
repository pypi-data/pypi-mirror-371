# Include package data
include README.md
include LICENSE
include requirements.txt
include MANIFEST.in

# Include HTML templates
recursive-include networkx_html_viewer/templates *.html

# Include examples
recursive-include networkx_html_viewer/examples *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store