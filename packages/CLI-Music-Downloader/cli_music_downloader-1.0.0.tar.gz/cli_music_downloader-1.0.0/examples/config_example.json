{
  "_comment": "CLI Music Downloader Configuration Example",
  "_note": "Copy this to ~/.batch_metadata_config.json and customize as needed",
  
  "api_keys": {
    "genius_api_key": "your_genius_api_key_here",
    "lastfm_api_key": "your_lastfm_api_key_here", 
    "lastfm_api_secret": "your_lastfm_api_secret_here",
    "discogs_user_token": "your_discogs_user_token_here"
  },
  
  "metadata_sources": {
    "preferred_order": ["musicbrainz", "shazam", "lastfm", "discogs"],
    "enable_musicbrainz": true,
    "enable_shazam": true,
    "enable_genius": true,
    "enable_lastfm": false,
    "enable_discogs": false
  },
  
  "required_fields": [
    "title",
    "artist",
    "album",
    "year"
  ],
  
  "optional_fields": [
    "track_number",
    "genre",
    "album_artist",
    "composer"
  ],
  
  "processing_settings": {
    "max_workers": 4,
    "delay_between_requests": 1.0,
    "backup_original_files": true,
    "auto_correct_metadata": true,
    "embed_lyrics": true,
    "embed_album_art": true
  },
  
  "validation_rules": {
    "min_title_length": 1,
    "min_artist_length": 1,
    "max_field_length": 255,
    "year_range": [1900, 2030],
    "allowed_genres": []
  },
  
  "file_formats": {
    "supported_input": [".mp3", ".flac", ".m4a", ".mp4", ".ogg", ".wma"],
    "preferred_output": ".mp3",
    "audio_quality": "192k"
  },
  
  "download_settings": {
    "music_directory": "~/Music",
    "organize_by_artist": true,
    "create_subdirectories": true,
    "filename_format": "{artist} - {title}",
    "skip_existing": true
  },
  
  "network_settings": {
    "timeout": 30,
    "retries": 3,
    "retry_delay": 5,
    "user_agent": "CLI-Music-Downloader/1.0"
  },
  
  "logging": {
    "level": "INFO",
    "enable_file_logging": false,
    "log_file": "~/.cli_music_downloader.log",
    "max_log_size": "10MB",
    "backup_count": 3
  }
}

