<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{{ title }}</title>

    <!-- Tailwind CSS (CDN) -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Custom CSS (optional, can be empty) -->
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}"/>
</head>
<body class="bg-gray-50 text-gray-900">
<div class="max-w-7xl mx-auto p-4 sm:p-6">
    <header class="mb-6">
        <h1 class="text-2xl sm:text-3xl font-semibold tracking-tight">{{ title }}</h1>
        <p class="text-sm text-gray-500 mt-1">Live log of the latest whisp messages</p>
    </header>

    <main class="space-y-8">
        <!-- Connections -->
        <section class="bg-white shadow-sm rounded-lg border border-gray-200">
            <div class="px-4 py-3 border-b border-gray-200 flex items-center justify-between">
                <h2 class="text-lg font-medium">Current Connections</h2>
                <span id="connections-count" class="text-xs px-2 py-1 rounded bg-gray-100 text-gray-700">0</span>
            </div>

            <div class="overflow-x-auto">
                <table class="min-w-full text-sm">
                    <thead class="bg-gray-100 text-gray-700">
                    <tr class="text-left">
                        <th class="px-4 py-2 font-medium">Name</th>
                        <th class="px-4 py-2 font-medium">SID</th>
                    </tr>
                    </thead>
                    <tbody id="connections-tbody" class="divide-y divide-gray-100">
                    {% for sid, connection in connections.items() if connection.name %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-4 py-2 whitespace-nowrap">{{ connection.name or "N/A" }}</td>
                            <td class="px-4 py-2 font-mono text-xs break-all">{{ connection.sid }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" class="px-4 py-3 text-gray-500">No connections available.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Messages -->
        <section class="bg-white shadow-sm rounded-lg border border-gray-200">
            <div class="px-4 py-3 border-b border-gray-200 flex items-center justify-between gap-4">
                <h2 class="text-lg font-medium">Messages</h2>
                <div class="flex items-center gap-3">
                    <label class="flex items-center gap-2 text-sm text-gray-700">
                        <input id="pause-toggle" type="checkbox" class="h-4 w-4">
                        <span>Pause updates</span>
                    </label>
                    <button id="clear-btn" class="text-sm px-3 py-1.5 rounded border border-gray-300 hover:bg-gray-50">
                        Clear
                    </button>
                </div>
            </div>

            <div class="overflow-x-auto max-h-[60vh] overflow-y-auto rounded-b-lg">
                <table class="min-w-full text-sm table-auto">
                    <colgroup>
                        <col style="width: 120px"/>
                        <col style="width: 180px"/>
                        <col style="width: 260px"/>
                        <col/>
                    </colgroup>

                    <thead>
                    <tr class="bg-gray-100 text-gray-700">
                        <th class="sticky top-0 z-10 px-4 py-2 font-medium bg-gray-100 text-left">Timestamp</th>
                        <th class="sticky top-0 z-10 px-4 py-2 font-medium bg-gray-100 text-left">Sender</th>
                        <th class="sticky top-0 z-10 px-4 py-2 font-medium bg-gray-100 text-left">Event</th>
                        <th class="sticky top-0 z-10 px-4 py-2 font-medium bg-gray-100 text-left">Data</th>
                    </tr>
                    </thead>

                    <tbody id="messages-tbody" class="divide-y divide-gray-100 font-mono text-xs">
                    <tr>
                        <td colspan="4" class="px-4 py-3 text-gray-500">No messages available.</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</div>

<!-- Socket.IO -->
<script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>

<!-- App scripts -->
<script src="{{ url_for('static', filename='whisp.js') }}"></script>
<script src="{{ url_for('static', filename='main.js') }}"></script>
</body>
</html>
