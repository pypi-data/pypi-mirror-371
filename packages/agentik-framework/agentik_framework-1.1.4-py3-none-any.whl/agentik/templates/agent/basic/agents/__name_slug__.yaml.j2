# NOTE:- Free models endpoint on OpenRouter may NOT support tool use.
# Disable tools to avoid routing errors.
# If you don't have a paid OpenRouter account, set `tools: []` in the agent config or use "openai/gpt-4o-mini" model.

version: 1
agent:
  name: "{{ name }}"
  goal: "Do the task: {{ name }}."
  loop:
    max_steps: 8
    reflect: true
llm:
  model: "openai/gpt-5"
  temperature: 0.2
  json_mode: false
memory:
  type: "{{ memory_type }}"
  path: "{{ memory_path }}"
tools:
{% for t in tools %}
  - "{{ t }}"
{% endfor %}
policies:
  allow_network: true
  allow_filesystem: true
