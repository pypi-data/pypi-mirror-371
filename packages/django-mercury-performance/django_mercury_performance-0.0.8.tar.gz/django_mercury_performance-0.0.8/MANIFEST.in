# Include package data
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include setup.py
include pyproject.toml

# Include Python files
recursive-include django_mercury *.py

# Include documentation
recursive-include django_mercury/documentation *.md

# Include examples
recursive-include django_mercury/examples *.py

# Exclude test files from package
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.py[co]

# Exclude development files
exclude .gitignore
exclude .env
exclude pypi-deploy.sh
exclude test_runner.py
exclude debug_test_runner.py
exclude quick_test.py