# Include the README and other documentation files
include README.md
include LICENSE
include CHANGELOG.md
include STYLE_GUIDE.md

# Include configuration files
include pyproject.toml
include requirements.txt
include requirements-dev.txt

# Include type information
include dotloop/py.typed

# Include all Python files in the package
recursive-include dotloop *.py
recursive-include dotloop *.pyi

# Exclude test files and development tools
recursive-exclude tests *
recursive-exclude scripts *
recursive-exclude docs *
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude Makefile

# Exclude cache and build directories
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .coverage
global-exclude .pytest_cache

# Exclude development and CI files
exclude .github
recursive-exclude .github *
exclude .vscode
recursive-exclude .vscode *
exclude .idea
recursive-exclude .idea * 